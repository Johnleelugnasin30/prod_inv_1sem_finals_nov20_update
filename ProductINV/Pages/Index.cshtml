@page
@model ProductINV.Pages.IndexModel
@{
    ViewData["Title"] = "Dashboard - Asset Inventory System";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            /* CWTP Logo Colors - Light Mode */
            --bg-primary: linear-gradient(135deg, #8b1a1a 0%, #c44f4f 25%, #d4a851 50%, #2d7a5f 75%, #1a4d7a 100%);
            --bg-secondary: #f8f9fa;
            --bg-card: #ffffff;
            --text-primary: #1a1a2e;
            --text-secondary: #6c757d;
            --text-muted: #adb5bd;
            --shadow: rgba(0, 0, 0, 0.1);
            --shadow-hover: rgba(139, 26, 26, 0.3);
            --border-color: rgba(0, 0, 0, 0.1);
            --overlay: rgba(255, 255, 255, 0.95);
            --gradient-start: #8b1a1a;
            --gradient-end: #c44f4f;
            --accent-green: #2d7a5f;
            --accent-gold: #d4a851;
            --accent-blue: #1a4d7a;
        }

        [data-theme="dark"] {
            /* CWTP Logo Colors - Dark Mode */
            --bg-primary: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
            --bg-secondary: #0f1419;
            --bg-card: #1e2530;
            --text-primary: #ffffff;
            --text-secondary: #b0b8c1;
            --text-muted: #6c757d;
            --shadow: rgba(0, 0, 0, 0.3);
            --shadow-hover: rgba(139, 26, 26, 0.5);
            --border-color: rgba(255, 255, 255, 0.1);
            --overlay: rgba(30, 37, 48, 0.95);
            --gradient-start: #8b1a1a;
            --gradient-end: #c44f4f;
            --accent-green: #2d7a5f;
            --accent-gold: #d4a851;
            --accent-blue: #1a4d7a;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background: var(--bg-primary);
            background-size: 400% 400%;
            animation: gradientShift 15s ease infinite;
            min-height: 100vh;
            transition: all 0.3s ease;
            position: relative;
            overflow-x: hidden;
        }

        @@keyframes gradientShift {
            0% {
                background-position: 0% 50%;
            }

            50% {
                background-position: 100% 50%;
            }

            100% {
                background-position: 0% 50%;
            }
        }

        /* Animated Background Elements */
        .bg-decoration {
            position: fixed;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            z-index: 0;
            overflow: hidden;
            pointer-events: none;
        }

        .bg-circle {
            position: absolute;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.03);
            animation: float 20s infinite ease-in-out;
        }

        [data-theme="dark"] .bg-circle {
            background: rgba(255, 255, 255, 0.02);
        }

        .bg-circle:nth-child(1) {
            width: 400px;
            height: 400px;
            top: -200px;
            left: -200px;
            animation-delay: 0s;
        }

        .bg-circle:nth-child(2) {
            width: 300px;
            height: 300px;
            bottom: -150px;
            right: -150px;
            animation-delay: 7s;
        }

        .bg-circle:nth-child(3) {
            width: 250px;
            height: 250px;
            top: 50%;
            right: 10%;
            animation-delay: 14s;
        }

        @@keyframes float {
            0%, 100% {
                transform: translate(0, 0) scale(1);
            }

            33% {
                transform: translate(30px, -30px) scale(1.1);
            }

            66% {
                transform: translate(-20px, 20px) scale(0.9);
            }
        }

        /* Floating Controls */
        .floating-controls {
            position: fixed;
            top: 1.5rem;
            right: 1.5rem;
            display: flex;
            gap: 0.75rem;
            z-index: 9999;
        }

        .control-btn {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            border: none;
            background: var(--overlay);
            backdrop-filter: blur(10px);
            color: var(--text-primary);
            font-size: 1.3rem;
            cursor: pointer;
            box-shadow: 0 4px 12px var(--shadow);
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .control-btn:hover {
                transform: translateY(-3px);
                box-shadow: 0 6px 20px var(--shadow-hover);
            }

            .control-btn:active {
                transform: translateY(-1px);
            }

        /* Main Container */
        .main-container {
            position: relative;
            z-index: 10;
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem;
            min-height: 100vh;
        }

        /* Dashboard Header */
        .dashboard-header {
            background: var(--overlay);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 3rem 2rem;
            margin-bottom: 3rem;
            box-shadow: 0 8px 32px var(--shadow);
            text-align: center;
            border: 1px solid var(--border-color);
            animation: slideDown 0.6s ease-out;
        }

        @@keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .dashboard-header h1 {
            font-size: 2.5rem;
            font-weight: 700;
            background: linear-gradient(135deg, var(--gradient-start) 0%, var(--gradient-end) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 1rem;
        }

        .welcome-text {
            font-size: 1.3rem;
            color: var(--text-secondary);
            font-weight: 500;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .welcome-emoji {
            animation: wave 2s ease-in-out infinite;
            display: inline-block;
        }

        @@keyframes wave {
            0%, 100% {
                transform: rotate(0deg);
            }

            10%, 30% {
                transform: rotate(14deg);
            }

            20% {
                transform: rotate(-8deg);
            }

            40% {
                transform: rotate(-4deg);
            }

            50% {
                transform: rotate(10deg);
            }
        }

        /* Cards Grid */
        .cards-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 2rem;
            animation: fadeInUp 0.8s ease-out 0.2s both;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .dashboard-card {
            background: var(--overlay);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 2rem;
            box-shadow: 0 4px 20px var(--shadow);
            border: 1px solid var(--border-color);
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
        }

            .dashboard-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 4px;
                background: linear-gradient(90deg, var(--gradient-start), var(--gradient-end));
                transform: scaleX(0);
                transition: transform 0.4s ease;
            }

            .dashboard-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 12px 40px var(--shadow-hover);
            }

                .dashboard-card:hover::before {
                    transform: scaleX(1);
                }

            /* Individual Card Colors from CWTP Logo */
            .dashboard-card:nth-child(1) .card-icon {
                background: linear-gradient(135deg, #8b1a1a 0%, #c44f4f 100%);
            }

            .dashboard-card:nth-child(2) .card-icon {
                background: linear-gradient(135deg, #2d7a5f 0%, #3aa076 100%);
            }

            .dashboard-card:nth-child(3) .card-icon {
                background: linear-gradient(135deg, #d4a851 0%, #e6c068 100%);
            }

            .dashboard-card:nth-child(4) .card-icon {
                background: linear-gradient(135deg, #1a4d7a 0%, #2563a3 100%);
            }

        .card-icon {
            width: 70px;
            height: 70px;
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            margin: 0 auto 1.5rem;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease;
        }

        .dashboard-card:hover .card-icon {
            transform: scale(1.1) rotate(5deg);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.3);
        }

        .card-title {
            font-size: 1.3rem;
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 0.75rem;
            text-align: center;
        }

        .card-description {
            font-size: 0.95rem;
            color: var(--text-muted);
            margin-bottom: 1.5rem;
            text-align: center;
            line-height: 1.6;
        }

        .card-btn {
            width: 100%;
            padding: 0.9rem;
            border-radius: 12px;
            border: none;
            background: linear-gradient(135deg, var(--gradient-start) 0%, var(--gradient-end) 100%);
            color: #fff;
            font-weight: 600;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

            .card-btn::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
                transition: left 0.5s ease;
            }

            .card-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(139, 26, 26, 0.4);
            }

                .card-btn:hover::before {
                    left: 100%;
                }

            .card-btn:active {
                transform: translateY(0);
            }

        /* Footer */
        .dashboard-footer {
            margin-top: 4rem;
            padding: 2rem;
            text-align: center;
            color: var(--text-muted);
            background: var(--overlay);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            border: 1px solid var(--border-color);
        }

            .dashboard-footer p {
                margin: 0;
                font-size: 0.9rem;
            }

        /* Responsive Design */
        @@media (max-width: 1200px) {
            .cards-grid {
                grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
                gap: 1.5rem;
            }
        }

        @@media (max-width: 768px) {
            .main-container {
                padding: 1rem;
            }

            .floating-controls {
                top: 1rem;
                right: 1rem;
                gap: 0.5rem;
            }

            .control-btn {
                width: 42px;
                height: 42px;
                font-size: 1.1rem;
            }

            .dashboard-header {
                padding: 2rem 1.5rem;
                margin-bottom: 2rem;
            }

                .dashboard-header h1 {
                    font-size: 1.8rem;
                }

            .welcome-text {
                font-size: 1.1rem;
            }

            .cards-grid {
                grid-template-columns: 1fr;
                gap: 1.25rem;
            }

            .dashboard-card {
                padding: 1.5rem;
            }

            .card-icon {
                width: 60px;
                height: 60px;
                font-size: 1.7rem;
            }

            .card-title {
                font-size: 1.15rem;
            }

            .card-description {
                font-size: 0.9rem;
            }
        }

        @@media (max-width: 480px) {
            .dashboard-header {
                padding: 1.5rem 1rem;
            }

                .dashboard-header h1 {
                    font-size: 1.5rem;
                }

            .welcome-text {
                font-size: 1rem;
                flex-direction: column;
            }

            .control-btn {
                width: 38px;
                height: 38px;
                font-size: 1rem;
            }

            .dashboard-card {
                padding: 1.25rem;
            }

            .card-btn {
                padding: 0.8rem;
                font-size: 0.95rem;
            }
        }

        /* Loading Animation */
        .card-btn.loading {
            pointer-events: none;
            opacity: 0.7;
        }

            .card-btn.loading::after {
                content: '';
                position: absolute;
                width: 16px;
                height: 16px;
                top: 50%;
                left: 50%;
                margin-left: -8px;
                margin-top: -8px;
                border: 2px solid #ffffff;
                border-radius: 50%;
                border-top-color: transparent;
                animation: spin 0.6s linear infinite;
            }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        /* Theme Transition */
        * {
            transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease;
        }

        /* Smooth Scroll */
        html {
            scroll-behavior: smooth;
        }
    </style>
</head>
<body>
    <!-- Background Decoration -->
    <div class="bg-decoration">
        <div class="bg-circle"></div>
        <div class="bg-circle"></div>
        <div class="bg-circle"></div>
    </div>

    <!-- Floating Controls -->
    <div class="floating-controls">
        <button class="control-btn" id="themeToggle" title="Toggle Theme">
            <span id="themeIcon">🌙</span>
        </button>
        <form method="post" asp-page-handler="Logout" style="display:inline; margin: 0;">
            <button type="submit" class="control-btn" title="Logout">
                <span>🚪</span>
            </button>
        </form>
    </div>

    <!-- Main Container -->
    <div class="main-container">
        <!-- Dashboard Header -->
        <div class="dashboard-header">
            <h1>Inventory Management Dashboard</h1>
            <div class="welcome-text">
                <span>Welcome, <strong>@Model.Username</strong></span>
                <span class="welcome-emoji">👋</span>
            </div>
        </div>

        <!-- Dashboard Cards Grid -->
        <div class="cards-grid">
            <!-- Product List Card (Maroon/Red) -->
            <div class="dashboard-card">
                <div class="card-icon">📦</div>
                <h3 class="card-title">Product List</h3>
                <p class="card-description">
                    Add, edit, or delete inventory items. Manage your complete product catalog efficiently.
                </p>
                <a asp-page="/ManageProduct" class="card-btn">
                    🚀 Manage Products
                </a>
            </div>

            <!-- Add Item Card (Green) -->
            <div class="dashboard-card">
                <div class="card-icon">➕</div>
                <h3 class="card-title">Add New Item</h3>
                <p class="card-description">
                    Quickly add new inventory items to your system with detailed information.
                </p>
                <a asp-page="/AddItem" class="card-btn">
                    📝 Add Item
                </a>
            </div>

            <!-- Scan QR Card (Gold/Yellow) -->
            <div class="dashboard-card">
                <div class="card-icon">📱</div>
                <h3 class="card-title">Scan QR Code</h3>
                <p class="card-description">
                    Scan QR codes to quickly check item details and update inventory status.
                </p>
                <a asp-page="/ScanQR" class="card-btn">
                    📷 Scan Now
                </a>
            </div>

            <!-- Reports Card (Blue) -->
            <div class="dashboard-card">
                <div class="card-icon">📊</div>
                <h3 class="card-title">Reports & Analytics</h3>
                <p class="card-description">
                    View comprehensive inventory reports, summaries, and analytics data.
                </p>
                <a asp-page="/Reports" class="card-btn">
                    📈 View Reports
                </a>
            </div>
        </div>

        <!-- Footer -->
        <div class="dashboard-footer">
            <p>&copy; 2024 CWTP Asset Inventory System. All rights reserved.</p>
        </div>
    </div>

    <script>
        // Theme Toggle Functionality
        const themeToggle = document.getElementById('themeToggle');
        const themeIcon = document.getElementById('themeIcon');
        const htmlElement = document.documentElement;

        // Check for saved theme preference or default to light mode
        const currentTheme = localStorage.getItem('theme') || 'light';
        htmlElement.setAttribute('data-theme', currentTheme);
        updateThemeIcon(currentTheme);

        themeToggle.addEventListener('click', () => {
            const currentTheme = htmlElement.getAttribute('data-theme');
            const newTheme = currentTheme === 'light' ? 'dark' : 'light';

            htmlElement.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            updateThemeIcon(newTheme);
        });

        function updateThemeIcon(theme) {
            if (theme === 'dark') {
                themeIcon.textContent = '🌞';
                themeToggle.setAttribute('title', 'Switch to Light Mode');
            } else {
                themeIcon.textContent = '🌙';
                themeToggle.setAttribute('title', 'Switch to Dark Mode');
            }
        }

        // Add click feedback to cards
        document.querySelectorAll('.dashboard-card').forEach(card => {
            card.addEventListener('click', function(e) {
                if (!e.target.closest('.card-btn')) {
                    const btn = this.querySelector('.card-btn');
                    if (btn) {
                        btn.click();
                    }
                }
            });
        });

        // Add loading state to buttons
        document.querySelectorAll('.card-btn').forEach(btn => {
            btn.addEventListener('click', function(e) {
                if (this.tagName.toLowerCase() === 'a') {
                    this.classList.add('loading');
                }
            });
        });

        // Prevent form resubmission on page refresh
        if (window.history.replaceState) {
            window.history.replaceState(null, null, window.location.href);
        }

        // Add keyboard navigation
        document.addEventListener('keydown', (e) => {
            if (e.key === 't' || e.key === 'T') {
                if (!e.target.matches('input, textarea')) {
                    themeToggle.click();
                }
            }
        });

        // Animate cards on scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach((entry, index) => {
                if (entry.isIntersecting) {
                    setTimeout(() => {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }, index * 100);
                }
            });
        }, observerOptions);

        document.querySelectorAll('.dashboard-card').forEach(card => {
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';
            observer.observe(card);
        });
    </script>
</body>
</html>